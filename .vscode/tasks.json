{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "C:\\Program Files\\CMake\\bin\\cmake.exe",            "args": [
                "-B",
                "build",
                "-S",
                ".",
                "-DVCPKG_INSTALLATION_ROOT=D:/vcpkg"
            ],
            "group": "build",
            "problemMatcher": []
        },        {
            "label": "CMake Build",
            "type": "shell",
            "command": "C:\\Program Files\\CMake\\bin\\cmake.exe",
            "args": [
                "--build",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "CMake Configure"
            ],
            "problemMatcher": ["$gcc", "$msCompile"]
        },
        {
            "label": "Run Application",
            "type": "shell",
            "command": "${workspaceFolder}/build/Debug/tls_app.exe",
            "group": "test",
            "dependsOn": [
                "CMake Build"
            ],
            "problemMatcher": []
        }
    ]
}
